<h2>Users</h2>


<div class="top-buffer">
<%= page_entries_info @users, :entry_name => 'user' %>
</div>

<div class="row">
<table class="table table-striped">
  <thead>
    <tr>
      <th>User</th>
      <th>Admin?</th>
      <th>Cancelled?</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.admin? ? 'Yes': 'No' -%></td>
        <td><%= user.deleted_at.present? ? 'Yes' : 'No' -%></td>
        <td>

          <% if can? :update, user -%>
          <%= link_to 'Edit', edit_user_path(user), class: 'btn btn-primary btn-sm' %>
          <% end -%>

        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<div class="row">
<%= paginate @users %>
<br>

<% if can? :create, User %>
<%= link_to 'New User', new_user_path, class: 'btn btn-primary' %>
<% end %>
</div>